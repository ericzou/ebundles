<dict>
	<key>beforeRunningCommand</key>
	<string>nop</string>
	<key>command</key>
	<string># set defaultCStringEncoding to UTF-8
export __CF_USER_TEXT_ENCODING=$UID:0x8000100:0x8000100

grep -E -v '^[ \t\s]*\-\-' | tr -s ' \n\t' ' ' | pbcopy
echo "Copied SQL to Clipboard"</string>
	<key>input</key>
	<string>selection</string>
	<key>keyEquivalent</key>
	<string>~@C</string>
	<key>name</key>
	<string>Copy Condensed SQL</string>
	<key>output</key>
	<string>showAsTooltip</string>
	<key>scope</key>
	<string>source.sql</string>
	<key>uuid</key>
	<string>37E7E7F5-DD1E-4306-B258-0F9176DC8D7E</string>
</dict>
